#magazines-shelf-phone.panel-group
  - @magazines.each do |magazine|
    .panel.panel-default
      .panel-heading{"data-parent" => "#magazines-shelf-phone", "data-toggle" => "collapse", href: "#magazine-#{magazine.id}"}
        %h4.panel-title= magazine.title
      %div{id: "magazine-#{magazine.id}", class: 'panel-collapse collapse'}
        .panel-body
          .row 
            .col-xs-12.text-center
              %img{src: 'http://placehold.it/150x220'}
              %hr
          .row
            .col-xs-12
              %p
                %strong Publicada: 
                #{magazine.published_date.strftime("%Y/%m/%d")}
              %p
                %strong Volumen: 
                = magazine.volume
              %p 
                %strong Categoria: 
                = link_to magazine.category.category, category_path(magazine.category.slug)
              - if magazine.copies > 0 
                %button.btn.btn-success{:type => "submit"} Pedir prestado
              - else
                %button.btn.disabled Copias agotadas