#magazines-shelf.hide-for-small-only
  .row
    .small-12.columns
      .row
        - @magazines.each do |magazine|
          .magazine.small-4.medium-6.large-4.columns
            .panel
              .row 
                .small-12.columns.text-center
                  %img{src:'http://placehold.it/130x160'}
                  %hr
              .row
                .small-12.columns
                  %p
                    %strong= magazine.title
                  %p
                    %strong Publicada: 
                    #{magazine.published_date.strftime("%Y/%m/%d")}
                  %p
                    %strong Volumen: 
                    = magazine.volume
                  %p 
                    %strong Categoria: 
                    = link_to magazine.category.category, category_path(magazine.category.slug)
                  - if magazine.copies > 0 
                    %button{:type => "submit"} Pedir prestado
                  - else
                    %button{:type => "submit"} Copias agotadas  
// Mobile
%dl.accordion.show-for-small-only{id: "magazines-shelf-phone", "data-accordion" => ""}
  - @magazines.each do |magazine|
    %dd 
      %a{href: "#magazine-#{magazine.id}"}= magazine.title
      %div{id: "magazine-#{magazine.id}", class: "content"}
        .row 
          .small-12.columns.text-center
            %img{src: 'http://placehold.it/150x220'}
            %hr
        .row
          .small-12.columns
            %p
              %strong Publicada: 
              #{magazine.published_date.strftime("%Y/%m/%d")}
            %p
              %strong Volumen: 
              = magazine.volume
            %p 
              %strong Categoria: 
              = link_to magazine.category.category, category_path(magazine.category.slug)
            - if magazine.copies > 0 
              %button.btn.btn-success{:type => "submit"} Pedir prestado
            - else
              %button.btn.disabled Copias agotadas