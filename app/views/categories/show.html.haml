#book-preview.modal.fade
- unless @books.empty?
  .container
    %h2 Libros de #{@category.category.downcase}
    = render 'books/books_shelf_phone'
    = render 'books/books_shelf'
    %hr
- unless @magazines.empty?
  .container 
    %h2 Revistas de #{@category.category.downcase}
    .row
      = render 'magazines/magazines_shelf_phone'
      - @magazines.each do |magazine|
        #magazines-shelf.col-xs-12.col-sm-6.col-md-5.col-lg-4
          %img.pull-left{src: 'http://placehold.it/150x220'}
          .magazine-info.col-xs-4.col-sm-6.col-md-6
            .row
              %strong= magazine.title
            .row
              = "Publicada: #{magazine.published_date.strftime("%Y/%m/%d")}"
            .row
              Volúmen:
              = magazine.volume
            .row
              %button.btn.btn-success{:type => "submit"} Pedir prestada
            - if current_user.admin?
              .row
                = link_to icon(:edit), edit_magazine_path(magazine.slug)
                = link_to icon(:trash), magazine.slug, data: { confirm: '¿Quieres borrar este revista?' }, method: :delete
    %hr