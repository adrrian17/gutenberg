#authors-shelf-phone.panel-group
  - @authors.each do |author|
    .panel.panel-default
      .panel-heading{"data-parent" => "#authors-shelf-phone", "data-toggle" => "collapse", href: "#author-#{author.id}"}
        %h4.panel-title= author.full_name
      %div{id: "author-#{author.id}", class: 'panel-collapse collapse'}
        .panel-body
          .row
            .col-xs-12
              %p 
                %strong Libros:
              - author.books.each do |book|
                .row 
                  .col-xs-12
                    %p
                      = link_to book.title, book_path(book.slug), class: 'book-title', data: { slug: book.slug }
              - if author.books.size > 1 && author.books.size < 5
                .row 
                  .col-xs-12.col-sm-12.col-md-12.col-lg-12
                    = link_to 'MÃ¡s libros...', author_path(author.slug), class: 'btn btn-success'