#book-preview.modal.fade
.container
  %h1 Autores
  .row
    - @authors.each do |author|
      .book-container.col-xs-12.col-sm-6.col-md-5.col-lg-4
        %img.pull-left{src: 'http://placehold.it/150x220'}
        .book-info.col-xs-4.col-sm-6.col-md-6
          .row 
            %strong= author.full_name
            .divider-line
          - author.books.each do |book|
            .row
              = link_to book.title, book_path(book.slug), class: 'book-title', data: { slug: book.slug }
          .row 
            = link_to 'MÃ¡s libros...', author_path(author.slug)
  %hr/
