<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Title</th>
      <th>Published date</th>
      <th>Pages</th>
      <th>Copies</th>
      <th>Publishing house</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_id %></td>
        <td><%= book.title %></td>
        <td><%= book.published_date %></td>
        <td><%= book.pages %></td>
        <td><%= book.copies %></td>
        <td><%= book.publishing_house_id %></td>
        <td><%= book.category_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

