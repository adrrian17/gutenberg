#books-shelf.hide-for-small-only
  .row
    .small-12.columns
      .row
        - @books.each do |book|
          .book.small-4.medium-6.large-4.columns
            .panel
              .row 
                .small-12.columns.text-center
                  %img{src:'http://placehold.it/130x160'}
                  %hr
                .small-12.columns
                  %p
                    %strong= book.short_title
                  %p
                    %strong Autor(es):
                    = raw(authors_links(book))
                  %p 
                    %strong Categoria: 
                    = link_to book.category.category, category_path(book.category.slug)
                  - if book.copies > 0 
                    %button.btn.btn-success{:type => "submit"} Pedir prestado
                  - else
                    %button.btn.disabled{:type => "submit"} Copias agotadas 
// Mobile
%dl.accordion.show-for-small-only{id: "books-shelf-phone", "data-accordion" => ""}
  - @books.each do |book|
    %dd 
      %a{href: "#book-#{book.id}"}= book.short_title
      %div{id: "book-#{book.id}", class: "content"}
        .row 
          .small-12.columns.text-center
            %img{src: 'http://placehold.it/150x220'}
            %hr
        .row
          .small-12.columns
            %p
              %strong= book.title
            %p
              %strong Autor(es):
              = raw(authors_links(book))
            %p 
              %strong Categoria: 
              = link_to book.category.category, category_path(book.category.slug)
            - if book.copies > 0 
              %button.btn.btn-success{:type => "submit"} Pedir prestado
            - else
              %button.btn.disabled Copias agotadas 