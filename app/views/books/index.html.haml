%h1 Listing books
%table
  %thead
    %tr
      %th Book
      %th Title
      %th Published date
      %th Pages
      %th Copies
      %th Publishing house
      %th Category
      %th
      %th
      %th
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.published_date
        %td= book.pages
        %td= book.copies
        %td= book.publishing_house_id
        %td= book.category_id
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Book', new_book_path
