.container
  %h1 Libros
  .row
    - all_books.each do |book|
      .book-container.col-md-4
        %img.pull-left{src: 'http://placehold.it/150x220'}
        .book-info.col-md-6
          .row
            = link_to book.title, book_path(book.slug)
          .row
            por
            = raw(authors_links(book))
          - if book.copies > 0 
            .row
              %button.btn.btn-success{:type => "submit"} Pedir prestado
          - else
            .row 
              %button.btn.disabled{:type => "submit"} Copias agotadas
          - if current_user.admin?
            .row
              = link_to icon(:edit), edit_book_path(book.slug)
              = link_to icon(:trash), book.slug, data: { confirm: 'Â¿Quieres borrar este libro?' }, method: :delete
  %hr