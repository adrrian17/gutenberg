.contain-to-grid.sticky
  %nav.top-bar{"data-topbar" => ""}
    %ul.title-area
      %li.name
        %h1
          %a Gutenberg
      %section.top-bar-section
        %ul.right
          %li.has-form
            .row
              = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'login'}) do |f|
                .large-4.columns
                  = f.email_field :email, :autofocus => true, :placeholder => 'email'
                .large-4.columns
                  = f.password_field :password, :placeholder => 'contraseña'
                .large-4.columns
                  = f.submit "Iniciar sesión", :class => 'button'