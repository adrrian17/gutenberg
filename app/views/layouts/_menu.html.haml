.contain-to-grid.sticky
  %nav.top-bar{"data-topbar" => ""}
    %ul.title-area
      %li.name
        %h1
          = link_to "Gutenberg", home_path
      %li.toggle-topbar.menu-icon
        %a{href: ""}
          %span   
    - if user_signed_in?
      %section.top-bar-section
        / Left Nav Section
        %ul.left
          %li
            = link_to "Libros", books_path
          %li
            = link_to "Autores", authors_path
          %li
            = link_to "Revistas", magazines_path
          %li.has-dropdown
            %a{href: "#"} Categorias
            %ul.dropdown
              - all_categories.each do |cat|
                %li
                  %a{:href => category_path(cat.slug)} #{cat.category}
        / Right Nav Section
        %ul.right
          %li
            %a{:href => "#"}
              %span.glyphicon.glyphicon-user
              #{current_user.full_name}
          %li
            %a{:href => destroy_user_session_path, "data-method" => "delete"}
              %span.glyphicon.glyphicon-off
              Salir
    - else
      %section.top-bar-section
        %ul.right
          %li.has-form
            .row
              = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'login'}) do |f|
                .large-4.columns
                  = f.email_field :email, :autofocus => true, :placeholder => 'email'
                .large-4.columns
                  = f.password_field :password, :placeholder => 'contraseña'
                .large-4.columns
                  = f.submit "Iniciar sesión", :class => 'button' 